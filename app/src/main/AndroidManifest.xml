<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.ids.markaz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<!--    <uses-permission android:name="android.permission.CAMERA" />-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
            android:name=".controller.MyApplication"
            android:allowBackup="true"
            android:appComponentFactory="whateverString"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:replace="android:appComponentFactory">
        <activity android:name=".controller.Activities.ActivitySettings"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityNotificationInside"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityNotification"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityInsideCash"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityAgvisorWebview"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityContactUs"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityReports"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityPerfomanceInside"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityPerformance"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityTransactions"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityAccountSummaryInside"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityAccountSummary"
                android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityHome"
                android:label="@string/title_activity_home"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.ids.controller.Activities.ActivityChooseLanguage" />
        <activity
                android:name=".controller.Activities.ActivityChooseApp"
                android:screenOrientation="portrait" />
        <activity
                android:name=".controller.Activities.ActivitySplash"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".controller.Activities.ActivityLogin"
                android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
                android:name=".controller.Activities.ActivityStart"
                android:windowSoftInputMode="stateHidden|adjustPan" />

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key" />
    </application>

</manifest>