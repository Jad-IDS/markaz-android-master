<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


    <include layout="@layout/toolbar"/>

   <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/button_height"
           android:layout_marginRight="@dimen/second_margin"
           android:layout_marginLeft="@dimen/second_margin"
           android:layout_marginTop="@dimen/big_margin"
           android:orientation="horizontal">

       <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:background="@drawable/background_rectangular_gray"
               android:orientation="horizontal"
               android:id="@+id/linearFrom"
               android:layout_marginRight="@dimen/small_margin"
               android:layout_marginEnd="@dimen/small_margin"

               >

           <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="@dimen/mini_margin"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:src="@drawable/icon_calendar"
                   android:layout_gravity="center_vertical"/>


           <com.ids.markaz.custom.CustomTextViewMedium
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:text="@string/from"

                   android:textColor="@color/black"
                   android:textSize="@dimen/small_font"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:layout_marginEnd="@dimen/mini_margin"
                   />

           <com.ids.markaz.custom.CustomTextViewMedium
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:textColor="@color/black"
                   android:id="@+id/tvDateFrom"
                   android:textSize="@dimen/small_font"
                   />


           <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:layout_marginLeft="@dimen/mini_margin"
                   android:src="@drawable/arrow_down"
                   android:tint="@color/primary"
                   />

       </LinearLayout>
       <LinearLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:id="@+id/linearTo"
               android:layout_marginLeft="@dimen/small_margin"
               android:layout_marginStart="@dimen/small_margin"
               android:background="@drawable/background_rectangular_gray"
               android:orientation="horizontal"

               >


           <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="@dimen/mini_margin"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:src="@drawable/icon_calendar"
                   android:layout_gravity="center_vertical"/>


           <com.ids.markaz.custom.CustomTextViewMedium
                   android:layout_width="wrap_content"

                   android:layout_height="wrap_content"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:text="@string/to"

                   android:textColor="@color/black"
                   android:textSize="@dimen/small_font"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:layout_marginEnd="@dimen/mini_margin"
                   />

           <com.ids.markaz.custom.CustomTextViewMedium
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:id="@+id/tvDateTo"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:textColor="@color/black"
                   android:textSize="@dimen/small_font"
                   />


           <ImageView
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginRight="@dimen/mini_margin"
                   android:layout_marginLeft="@dimen/mini_margin"
                   android:src="@drawable/arrow_down"
                   android:tint="@color/primary"
                   />

       </LinearLayout>

   </LinearLayout>
   <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/button_height"
           android:layout_marginRight="@dimen/second_margin"
           android:layout_marginLeft="@dimen/second_margin"
           android:layout_marginTop="@dimen/big_margin"
           android:background="@drawable/background_rectangular_gray"
           >


       <ImageView
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_gravity="center_vertical"
               android:layout_marginRight="@dimen/mini_margin"
               android:layout_marginLeft="@dimen/mini_margin"
               android:src="@drawable/arrow_down"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:tint="@color/primary"
               />

       <Spinner
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/transparent"
               android:textSize="@dimen/font"
               android:id="@+id/spPortfolio"

               />

   </RelativeLayout>
   <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/second_margin"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:background="@drawable/background_rectangular_gray"
            >


        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/mini_margin"
                android:layout_marginLeft="@dimen/mini_margin"
                android:src="@drawable/arrow_down"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:tint="@color/primary"
                />

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/transparent"
                android:textSize="@dimen/font"
                android:id="@+id/spReportType"

                />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:layout_marginLeft="@dimen/second_margin"
            >

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/small_margin"
                android:id="@+id/btPdf"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@drawable/background_rectangular_primary"

                android:layout_gravity="center"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_pdf"
                    />

            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:text="@string/pdf"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:id="@+id/btWord"
                android:layout_gravity="center"
                android:background="@drawable/background_rectangular_violet"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_pdf"
                    />

            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:text="@string/word"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/small_margin"
                android:id="@+id/btExcel"
                android:layout_marginStart="@dimen/small_margin"
                android:background="@drawable/background_rectangular_green"
                android:layout_gravity="center"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_pdf"
                    />

            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:text="@string/excel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>