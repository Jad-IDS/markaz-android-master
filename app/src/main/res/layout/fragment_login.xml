<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"

        android:orientation="vertical"
>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/big_margin"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/logo"
                    />


            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="username"
                    android:paddingStart="@dimen/mini_margin"
                    android:paddingLeft="@dimen/mini_margin"
                    />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@drawable/bg_recangular_border_gray"
                    android:textSize="@dimen/font"
                    android:paddingLeft="@dimen/normal_margin"
                    android:paddingRight="@dimen/normal_margin"
                    android:textColor="@color/primary"
                    android:id="@+id/etUsrname"
                    android:layout_marginTop="@dimen/normal_margin"/>


            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_font"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="password"
                    android:paddingStart="@dimen/mini_margin"
                    android:paddingLeft="@dimen/mini_margin"
                    />

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@drawable/bg_recangular_border_gray"
                    android:textSize="@dimen/font"
                    android:textColor="@color/primary"
                    android:paddingLeft="@dimen/normal_margin"
                    android:paddingRight="@dimen/normal_margin"
                    android:id="@+id/etPassword"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/normal_margin"/>

            <com.ids.markaz.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/small_font"
                    android:text="Forgot password?"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/mini_margin"
                    />



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_gravity="center"
                    android:id="@+id/btFingerPrint"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/backgroud_rectangular_blue">

                <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:backgroundTint="@color/white"
                        android:tint="@color/white"
                        android:src="@drawable/icon_fingerprint"/>

                <com.ids.markaz.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font"
                        android:text="FingerPrint"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/normal_margin"
                        android:layout_marginStart="@dimen/normal_margin"
                        />
            </LinearLayout>




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/big_margin"
                    android:id="@+id/btLogin"
                    android:background="@drawable/bg_rectangular_border_primary"
                    >

                <com.ids.markaz.custom.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"

                        android:textColor="@color/primary"
                        android:textSize="@dimen/font"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
            </LinearLayout>

        </LinearLayout>


        <include layout="@layout/loading_trans"/>

    </RelativeLayout>


</LinearLayout>